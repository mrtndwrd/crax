<?xml version="1.0"?>
<xabsl:option-trees xmlns:xabsl="http://www.xabsl.de" xmlns="http://www.w3.org/1999/xhtml" xmlns:dotml="http://www.martin-loetzsch.de/DOTML">
  <xabsl:option-tree root-option="choose_role">
    <xabsl:o-n name="choose_role">
      <xabsl:e2o to="drive_circle"/>
      <xabsl:e2o to="walk_corridor"/>
      <xabsl:e2b to="wait"/>
    </xabsl:o-n>
    <xabsl:o-n name="drive_circle">
      <xabsl:e2b to="differential_drive"/>
    </xabsl:o-n>
    <xabsl:b-n name="differential_drive" g="my_basic_behaviors"/>
    <xabsl:o-n name="walk_corridor">
      <xabsl:e2b to="differential_drive"/>
      <xabsl:e2b to="wait"/>
    </xabsl:o-n>
    <xabsl:b-n name="differential_drive" g="my_basic_behaviors"/>
    <xabsl:b-n name="wait" g="my_basic_behaviors"/>
    <xabsl:b-n name="wait" g="my_basic_behaviors"/>
  </xabsl:option-tree>
  <xabsl:option-tree root-option="drive_circle">
    <xabsl:o-n name="drive_circle">
      <xabsl:e2b to="differential_drive"/>
    </xabsl:o-n>
    <xabsl:b-n name="differential_drive" g="my_basic_behaviors"/>
  </xabsl:option-tree>
  <xabsl:option-tree root-option="walk_corridor">
    <xabsl:o-n name="walk_corridor">
      <xabsl:e2b to="differential_drive"/>
      <xabsl:e2b to="wait"/>
    </xabsl:o-n>
    <xabsl:b-n name="differential_drive" g="my_basic_behaviors"/>
    <xabsl:b-n name="wait" g="my_basic_behaviors"/>
  </xabsl:option-tree>
</xabsl:option-trees>
