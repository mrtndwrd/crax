<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE symbol-and-basic-behavior-files SYSTEM "../symbol-and-basic-behavior-files.dtd">
<option xmlns="http://www.xabsl.de" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="drive_circle" initial-state="turn">
  &my_symbols;
  &my_basic_behaviors;
  &options;
  <state name="turn">
    <subsequent-basic-behavior ref="differential_drive">
      <set-parameter ref="differential_drive.speed">
        <decimal-value value="0"/>
      </set-parameter>
      <set-parameter ref="differential_drive.turning_speed">
        <decimal-value value="-0.3"/>
      </set-parameter>
    </subsequent-basic-behavior>
    <decision-tree>
      <if>
        <condition description="">
          <less-than>
            <decimal-input-symbol-ref ref="ammount_turned"/>
            <decimal-value value="360"/>
          </less-than>
        </condition>
        <transition-to-state ref="turn"/>
      </if>
      <else>
        <transition-to-state ref="done"/>
      </else>
    </decision-tree>
  </state>
  <state name="done" is-target-state="true">
    <decision-tree>
      <transition-to-state ref="done"/>
    </decision-tree>
  </state>
</option>
