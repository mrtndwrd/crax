/** Makes the agent be aware of its role, by the enumerated input symbol current_behavior */
option choose_role
{
    initial state get_role
    {
        decision
        {
            if(current_behavior == DRIVE_CIRCLE)
            {
                goto drive_circle_state;
            }
            else
            {
                stay;
            }
        }
        action
        {
            wait(time=1);
        }
    }
    state drive_circle_state
    {
        decision
        {
            if(current_behavior == DRIVE_CIRCLE)
            {
                stay;
            }
            else
            {
                goto get_role;
            }
        }
        action
        {
            drive_circle();
        }
    }
}




