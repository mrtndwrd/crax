<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE symbol-and-basic-behavior-files SYSTEM "../symbol-and-basic-behavior-files.dtd">
<option xmlns="http://www.xabsl.de" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="dribble" initial-state="behind_ball">
  &my_symbols;
  &my_basic_behaviors;
  &options;
  <state name="behind_ball">
    <set-enumerated-output-symbol ref="next_action">
      <enum-element-ref ref="next_action.W"/>
    </set-enumerated-output-symbol>
    <decision-tree>
      <if>
        <condition description="not behind ball">
          <not>
            <enumerated-input-symbol-comparison>
              <enumerated-input-symbol-ref ref="ball.local.direction"/>
              <enum-element-ref ref="next_action.W"/>
            </enumerated-input-symbol-comparison>
          </not>
        </condition>
        <transition-to-state ref="not_behind_ball"/>
      </if>
      <else>
        <if>
          <condition description="near opponent goal">
            <less-than>
              <decimal-input-symbol-ref ref="x"/>
              <decimal-value value="13"/>
            </less-than>
          </condition>
          <transition-to-state ref="behind_ball_near_opponent_goal"/>
        </if>
        <else>
          <transition-to-state ref="behind_ball"/>
        </else>
      </else>
    </decision-tree>
  </state>
  <state name="behind_ball_near_opponent_goal">
    <set-enumerated-output-symbol ref="next_action">
      <enum-element-ref ref="next_action.kick"/>
    </set-enumerated-output-symbol>
    <decision-tree>
      <transition-to-state ref="behind_ball"/>
    </decision-tree>
  </state>
  <state name="not_behind_ball">
    <subsequent-basic-behavior ref="get_behind_ball"/>
    <decision-tree>
      <if>
        <condition description="not behind ball">
          <not>
            <enumerated-input-symbol-comparison>
              <enumerated-input-symbol-ref ref="ball.local.direction"/>
              <enum-element-ref ref="next_action.W"/>
            </enumerated-input-symbol-comparison>
          </not>
        </condition>
        <transition-to-state ref="not_behind_ball"/>
      </if>
      <else>
        <transition-to-state ref="behind_ball"/>
      </else>
    </decision-tree>
  </state>
</option>
