<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE symbol-and-basic-behavior-files SYSTEM "../symbol-and-basic-behavior-files.dtd">
<option xmlns="http://www.xabsl.de" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="defender" initial-state="own_team_has_ball">
  &my_symbols;
  &my_basic_behaviors;
  &options;
  <state name="own_team_has_ball">
    <subsequent-basic-behavior ref="go_to">
      <set-parameter ref="go_to.x">
        <plus>
          <decimal-input-symbol-ref ref="ball.x"/>
          <decimal-value value="12"/>
        </plus>
      </set-parameter>
      <set-parameter ref="go_to.y">
        <decimal-input-symbol-ref ref="ball.y"/>
      </set-parameter>
    </subsequent-basic-behavior>
    <decision-tree>
      <if>
        <condition description="opponent team has ball">
          <less-than>
            <decimal-input-symbol-ref ref="most_westerly_teammate.x"/>
            <decimal-input-symbol-ref ref="ball.x"/>
          </less-than>
        </condition>
        <transition-to-state ref="opponent_team_has_ball"/>
      </if>
      <else>
        <transition-to-state ref="own_team_has_ball"/>
      </else>
    </decision-tree>
  </state>
  <state name="opponent_team_has_ball">
    <subsequent-basic-behavior ref="go_to">
      <set-parameter ref="go_to.x">
        <plus>
          <decimal-input-symbol-ref ref="ball.x"/>
          <decimal-value value="10"/>
        </plus>
      </set-parameter>
      <set-parameter ref="go_to.y">
        <decimal-input-symbol-ref ref="ball.y"/>
      </set-parameter>
    </subsequent-basic-behavior>
    <decision-tree>
      <if>
        <condition description="own team has ball">
          <greater-than-or-equal-to>
            <decimal-input-symbol-ref ref="most_westerly_teammate.x"/>
            <decimal-input-symbol-ref ref="ball.x"/>
          </greater-than-or-equal-to>
        </condition>
        <transition-to-state ref="own_team_has_ball"/>
      </if>
      <else>
        <transition-to-state ref="opponent_team_has_ball"/>
      </else>
    </decision-tree>
  </state>
</option>
