<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE symbol-and-basic-behavior-files SYSTEM "../symbol-and-basic-behavior-files.dtd">
<option xmlns="http://www.xabsl.de" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="play_soccer" initial-state="midfielder">
  &my_symbols;
  &options;
  <common-decision-tree>
    <if>
      <condition description="player role is striker">
        <enumerated-input-symbol-comparison>
          <enumerated-input-symbol-ref ref="role"/>
          <enum-element-ref ref="role.striker"/>
        </enumerated-input-symbol-comparison>
      </condition>
      <transition-to-state ref="striker"/>
    </if>
    <else>
      <if>
        <condition description="player role is defender">
          <enumerated-input-symbol-comparison>
            <enumerated-input-symbol-ref ref="role"/>
            <enum-element-ref ref="role.defender"/>
          </enumerated-input-symbol-comparison>
        </condition>
        <transition-to-state ref="defender"/>
      </if>
      <else>
        <if>
          <condition description="player role is midfielder">
            <enumerated-input-symbol-comparison>
              <enumerated-input-symbol-ref ref="role"/>
              <enum-element-ref ref="role.midfielder"/>
            </enumerated-input-symbol-comparison>
          </condition>
          <transition-to-state ref="midfielder"/>
        </if>
      </else>
    </else>
  </common-decision-tree>
  <state name="striker">
    <subsequent-option ref="striker"/>
    <decision-tree>
      <transition-to-state ref="striker"/>
    </decision-tree>
  </state>
  <state name="midfielder">
    <subsequent-option ref="midfielder"/>
    <decision-tree>
      <transition-to-state ref="midfielder"/>
    </decision-tree>
  </state>
  <state name="defender">
    <subsequent-option ref="defender"/>
    <decision-tree>
      <transition-to-state ref="defender"/>
    </decision-tree>
  </state>
</option>
