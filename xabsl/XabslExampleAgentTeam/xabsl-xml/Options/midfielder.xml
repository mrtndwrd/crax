<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE symbol-and-basic-behavior-files SYSTEM "../symbol-and-basic-behavior-files.dtd">
<option xmlns="http://www.xabsl.de" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="midfielder" initial-state="get_to_ball">
  &my_symbols;
  &my_basic_behaviors;
  &options;
  <state name="get_to_ball">
    <subsequent-basic-behavior ref="go_to">
      <set-parameter ref="go_to.x">
        <decimal-input-symbol-ref ref="ball.x"/>
      </set-parameter>
      <set-parameter ref="go_to.y">
        <decimal-input-symbol-ref ref="ball.y"/>
      </set-parameter>
    </subsequent-basic-behavior>
    <decision-tree>
      <if>
        <condition description="far from ball">
          <greater-than>
            <decimal-input-symbol-ref ref="ball.distance"/>
            <decimal-value value="3"/>
          </greater-than>
        </condition>
        <transition-to-state ref="get_to_ball"/>
      </if>
      <else>
        <if>
          <condition description="no teammate to the west">
            <greater-than>
              <decimal-input-symbol-ref ref="most_westerly_teammate.x"/>
              <plus>
                <decimal-input-symbol-ref ref="ball.x"/>
                <decimal-value value="2"/>
              </plus>
            </greater-than>
          </condition>
          <transition-to-state ref="dribble"/>
        </if>
        <else>
          <transition-to-state ref="pass"/>
        </else>
      </else>
    </decision-tree>
  </state>
  <state name="pass">
    <subsequent-option ref="pass"/>
    <decision-tree>
      <if>
        <condition description="far from ball">
          <greater-than>
            <decimal-input-symbol-ref ref="ball.distance"/>
            <decimal-value value="3"/>
          </greater-than>
        </condition>
        <transition-to-state ref="get_to_ball"/>
      </if>
      <else>
        <transition-to-state ref="pass"/>
      </else>
    </decision-tree>
  </state>
  <state name="dribble">
    <subsequent-option ref="dribble"/>
    <decision-tree>
      <if>
        <condition description="far from ball">
          <greater-than>
            <decimal-input-symbol-ref ref="ball.distance"/>
            <decimal-value value="3"/>
          </greater-than>
        </condition>
        <transition-to-state ref="get_to_ball"/>
      </if>
      <else>
        <transition-to-state ref="dribble"/>
      </else>
    </decision-tree>
  </state>
</option>
